{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "order"
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "created",
        "paid",
        "shipped",
        "delivered",
        "cancelled"
      ],
      "required": true,
      "default": "created"
    },
    "created": {
      "type": "datetime",
      "required": true
    },
    "updated": {
      "type": "datetime",
      "required": false
    },
    "items": {
      "type": "json",
      "required": true
    },
    "paymentInfo": {
      "type": "json",
      "required": true
    }
  }
}
